<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/visit_med_inst_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/visit_inst_header"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#08979B" />

        <TextView
            android:id="@+id/visit_int_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/visit_medical_institution_visit_int_title_text"
            android:textAppearance="@style/visit_inst_title" />

    </FrameLayout>

    <TextView
        android:id="@+id/visit_inst_name_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/visit_medical_institution_visit_inst_name_header_text"
        android:textAppearance="@style/visit_inst_item_header"
        android:textColor="#08979B" />

    <TextView
        android:id="@+id/visit_inst_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        android:text="@string/visit_medical_institution_visit_inst_name_text"
        android:textAppearance="@style/visit_inst_name" />

    <TextView
        android:id="@+id/visit_inst_services_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:text="@string/visit_medical_institution_visit_inst_services_header_text"
        android:textAppearance="@style/visit_inst_item_header"
        android:textColor="#08979B" />

    <TextView
        android:id="@+id/visit_inst_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="@string/visit_medical_institution_visit_inst_services_text"
        android:textAppearance="@style/visit_inst_item_txt" />

    <TextView
        android:id="@+id/visit_inst_appoint_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/visit_medical_institution_visit_inst_appoint_header_text"
        android:textAppearance="@style/visit_inst_item_header"
        android:textColor="#08979B" />

    <LinearLayout
        android:id="@+id/inst_visit_appoint_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#08979B"
        android:orientation="vertical">

        <TextView
            android:id="@+id/visit_inst_appoint_day_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="@string/visit_medical_institution_visit_inst_appoint_day_time_text"
            android:textAppearance="@style/visit_inst_appointment_day_and_time" />

        <TextView
            android:id="@+id/visit_inst_appoint_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="@string/visit_medical_institution_visit_inst_appoint_date_text"
            android:textAppearance="@style/visit_inst_appointment_date" />

        <TextView
            android:id="@+id/visit_inst_appoint_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:text="@string/visit_medical_institution_visit_inst_appoint_path_text"
            android:textAppearance="@style/visit_inst_appointment_path" />

    </LinearLayout>

    <TextView
        android:id="@+id/visit_inst_state_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/visit_medical_institution_visit_inst_state_header_text"
        android:textAppearance="@style/visit_inst_item_header"
        android:textColor="#08979B" />

    <TextView
        android:id="@+id/visit_inst_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="@string/visit_medical_institution_visit_inst_state_text"
        android:textAppearance="@style/visit_inst_item_txt"
        android:textColor="#1EC32A" />

    <TextView
        android:id="@+id/visit_inst_turn_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/visit_medical_institution_visit_inst_turn_header_text"
        android:textAppearance="@style/visit_inst_item_header"
        android:textColor="#08979B" />

    <TextView
        android:id="@+id/visit_inst_turn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="@string/visit_medical_institution_visit_inst_turn_text"
        android:textAppearance="@style/visit_inst_item_txt"
        android:textColor="#1EC32A" />

    <TextView
        android:id="@+id/visit_inst_queue_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/visit_medical_institution_visit_inst_queue_header_text"
        android:textAppearance="@style/visit_inst_item_header"
        android:textColor="#08979B" />

    <TextView
        android:id="@+id/visit_inst_queue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="@string/visit_medical_institution_visit_inst_queue_text"
        android:textAppearance="@style/visit_inst_item_txt"
        android:textColor="#1EC32A" />

    <LinearLayout
        android:id="@+id/visit_inst_btn_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/visit_inst_right_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_weight="0.85"
            android:background="@drawable/rounded_corner_drawable"
            android:backgroundTint="#0A989C"
            android:text="@string/visit_medical_institution_visit_inst_right_btn_text"
            android:textAppearance="@style/visit_inst_btn_text" />

        <Button
            android:id="@+id/visit_inst_left_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner_drawable"
            android:backgroundTint="#0A989C"
            android:text="@string/visit_medical_institution_visit_inst_left_btn_text"
            android:textAppearance="@style/visit_inst_btn_text" />
    </LinearLayout>

</LinearLayout>
